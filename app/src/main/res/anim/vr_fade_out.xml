<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <alpha android:fromAlpha="1"
        android:toAlpha="0"
        android:duration="300" />
    <!-- Pivot x & y determine from where the animation will happen.
   Setting them to 50% will make it from center -->
    <scale android:fromXScale="100%"
        android:fromYScale="100%"
        android:toXScale="40%"
        android:toYScale="40%"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="300" />
</set>